{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://bcrs.gov.bc.ca/.well_known/schemas/share_class",
    "type": "object",
    "title": "Share Class Schema",
    "definitions": {
        "shareStructure": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "title": "The name of the share class or series."
                },
                "shareStructureType": {
                    "type": "string",
                    "title": "The type of the share structure.",
                    "enum": [
                        "Class",
                        "Series"
                    ]
                },
                "displayOrder": {
                    "type": "integer",
                    "title": "The display order of the shares that indicates priority. "
                },
                "maxNumberOfShares": {
                    "type": [
                        "number", "null"
                    ],
                    "title": "Maximum number of shares in the class. "
                },
                "parValue": {
                    "type": [
                        "number", "null"
                    ],
                    "title": "Initial value of each share. "
                },
                "currency": {
                    "type": "string",
                    "examples": [
                        "CAD"
                    ]
                },
                "hasMaximumShares": {
                    "type": "boolean",
                    "title": "Has maximum number of shares?"
                },
                "hasParValue": {
                    "type": "boolean",
                    "title": "Has initial value of each share?"
                },
                "hasRightsOrRestrictions": {
                    "type": "boolean",
                    "title": "Has special rights or restrictions?"
                },
                "series": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/shareStructure"
                    }
                }
            },
            "required": [
                "name",
                "shareStructureType",
                "displayOrder",
                "maxNumberOfShares",
                "parValue",
                "currency",
                "hasMaximumShares",
                "hasParValue",
                "hasRightsOrRestrictions"
            ]
        }
    },
    "properties": {
        "shareClasses": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/shareStructure"
            }
        }
    },
    "required": [
        "shareClasses"
    ]
}
