{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://bcrs.gov.bc.ca/.well_known/schemas/transparency_register",
    "type": "object",
    "definitions": {},
    "title": "Transparency Register Schema",
    "required": [
        "transparencyRegister"
    ],
    "properties": {
        "transparencyRegister": {
            "type": "object",
            "required": [
                "type",
                "ledgerReferenceNumber"
            ],
            "properties": {
                "type": {
                    "type": "string",
                    "title": "The type of the tranparency register filing",
                    "enum": ["annual", "change", "initial"]
                },
                "ledgerReferenceNumber": {
                    "type": "string",
                    "title": "The submission reference number"
                }
            }
        }
    }
}
